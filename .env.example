# Fact Checker Environment Variables
# Copy this to .env and fill in your API keys

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration (optional)
MONGODB_URI=
MONGODB_DB_NAME=factchecker
REDIS_URL=

# CRITICAL API Keys (at least one required)
GOOGLE_FACTCHECK_API_KEY=your-google-factcheck-api-key
OPENAI_API_KEY=your-openai-api-key

# Additional API Keys (more = better results)
FRED_API_KEY=your-fred-api-key
YOUTUBE_API_KEY=your-youtube-api-key
NEWS_API_KEY=your-newsapi-key
SCRAPERAPI_KEY=your-scraperapi-key
SCRAPINGBEE_API_KEY=your-scrapingbee-key
MEDIASTACK_API_KEY=your-mediastack-key
NOAA_TOKEN=your-noaa-token
CENSUS_API_KEY=your-census-key
CDC_API_KEY=your-cdc-key

# Server Configuration
PORT=5000

# Application Settings
MAX_TRANSCRIPT_LENGTH=500000
MAX_CLAIMS_PER_TRANSCRIPT=100
USE_GPT4=True
ENABLE_AGGRESSIVE_CHECKING=True
FORCE_VERDICT_ON_ALL_CLAIMS=True

# Timeouts
REQUEST_TIMEOUT=30
FACT_CHECK_TIMEOUT=15
TOTAL_ANALYSIS_TIMEOUT=900
