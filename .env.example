# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_DEBUG=False

# Primary Fact-Checking API (Required)
GOOGLE_FACTCHECK_API_KEY=your-google-factcheck-api-key

# Economic Data APIs (Highly Recommended)
FRED_API_KEY=your-fred-api-key  # Free at https://fred.stlouisfed.org/docs/api/api_key.html

# News Verification APIs (Choose at least one)
NEWS_API_KEY=your-newsapi-key  # Free tier at https://newsapi.org/
MEDIASTACK_API_KEY=your-mediastack-key  # Free tier at https://mediastack.com/

# AI Enhancement (Optional but improves analysis)
OPENAI_API_KEY=your-openai-api-key  # For complex claim analysis

# Additional Free Government APIs (All free, no key required)
# These are accessed directly:
# - CDC COVID Data: https://data.cdc.gov/
