# Fact Checker Environment Variables
# Copy this to .env and fill in your API keys

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration (for local development)
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB_NAME=factchecker
REDIS_URL=redis://localhost:6379/0

# Required API Keys
GOOGLE_FACTCHECK_API_KEY=your-google-factcheck-api-key
OPENAI_API_KEY=your-openai-api-key-for-ai-filtering

# Optional API Keys
FRED_API_KEY=your-fred-api-key-for-economic-data
YOUTUBE_API_KEY=your-youtube-api-key

# Server Configuration
PORT=5000

# Application Limits
MAX_TRANSCRIPT_LENGTH=50000
MAX_CLAIMS_PER_TRANSCRIPT=50

# Timeouts
REQUEST_TIMEOUT=30
FACT_CHECK_TIMEOUT=10
